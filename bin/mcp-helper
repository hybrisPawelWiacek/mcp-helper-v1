#!/usr/bin/env node
/**
 * MCP Helper CLI wrapper
 * Standalone CLI tool for managing MCP server configurations
 */

import { runCommand } from '../cli/router.js';

const args = process.argv.slice(2);
const command = args[0];
const commandArgs = args.slice(1);

runCommand(command, commandArgs).catch(error => {
  console.error('\x1b[31mâœ—\x1b[0m Fatal error:', error.message);
  if (process.env.DEBUG) {
    console.error(error.stack);
  }
  process.exit(1);
});