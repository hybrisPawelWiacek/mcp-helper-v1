  "author": "MCP Helper Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/mcp-helper/mcp-helper.git"
  },
  "homepage": "https://github.com/mcp-helper/mcp-helper#readme",
  "bugs": {
    "url": "https://github.com/mcp-helper/mcp-helper/issues"
  },
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "chalk": "^5.5.0",
    "cli-table3": "^0.6.3",
    "diff": "^5.1.0",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.3.1",
    "handlebars": "^4.7.8",
    "inquirer": "^9.3.7",
    "js-yaml": "^4.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
